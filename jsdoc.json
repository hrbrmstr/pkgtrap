{
  "tags": {
    "allowUnknownTags": true
  },
  "source": {
    "include": ["./src", "./index.mjs"],
    "includePattern": ".+\\.[m]js(doc|x)?$",
    "excludePattern": "(^|\\/|\\\\)_"
  },
  "plugins": ["plugins/markdown"],
  "opts": {
    "template": "node_modules/better-docs",
    "encoding": "utf8",
    "destination": "public/",
    "recurse": true,
    "verbose": true,
    "readme": "./README.md"
  },
  "templates": {
    "cleverLinks": false,
    "monospaceLinks": false
  }
}